{
  "$id": "https://astraflow.example.com/schema/ws.pkg.event.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Package Event",
  "type": "object",
  "required": ["name", "version", "status"],
  "properties": {
    "name": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "status": { "type": "string", "enum": ["installed", "failed"] },
    "log_url": { "type": "string" },
    "details": { "type": "object" }
  },
  "additionalProperties": false
}
