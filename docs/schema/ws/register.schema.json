{
  "$id": "https://astraflow.example.com/schema/ws.register.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Register Payload",
  "type": "object",
  "required": ["capabilities", "packages", "queues"],
  "properties": {
    "capabilities": {
      "type": "object",
      "required": ["concurrency", "runtimes", "features"],
      "properties": {
        "concurrency": {
          "type": "object",
          "required": ["max_parallel"],
          "properties": {
            "max_parallel": { "type": "integer", "minimum": 1 },
            "per_node_limits": {
              "type": "object",
              "additionalProperties": { "type": "integer", "minimum": 1 }
            }
          },
          "additionalProperties": false
        },
        "runtimes": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "minItems": 1
        },
        "features": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      },
      "additionalProperties": false
    },
    "packages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "version", "status"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "version": { "type": "string", "minLength": 1 },
          "status": { "type": "string", "enum": ["installed", "missing", "failed"] }
        },
        "additionalProperties": false
      }
    },
    "channels": {
      "type": "array",
      "description": "Optional execution channels exposed by the worker",
      "items": { "type": "string", "minLength": 1 }
    }
  },
  "additionalProperties": false
}
